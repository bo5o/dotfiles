source ~/.neomutt/private/personalrc
source ~/.neomutt/muttcol
source ~/.neomutt/private/aliases
source ~/.neomutt/gpgrc

set sort = 'reverse-threads'
set editor = nvim
set my_msmtp_pass=`gpg -d ~/.password-store/strato.gpg`
#set copy = no
set timeout = "5"
set mail_check = "10"
set mailcap_path = ~/.neomutt/mailcap
set date_format="%m/%d %I:%M"
set index_format="%2C %Z %d %-15.15F %s (%-4.4c)"
set use_from = "yes"
set alias_file = ~/.neomutt/private/aliases

auto_view text/html
alternative_order text/plain text/enriched text/html

mono bold bold
mono underline underline
mono indicator reverse
color index yellow default '.*'
color index_author red default '.*'
color index_number blue default
color index_subject cyan default '.s'
color index_size green default
color normal default default
color body brightred default [\-\.+_a-zA-Z0-9]+@[\-\.a-zA-Z0-9]+
color body brightblue default (https?|ftp)://[\-\.,/%~_:?&=\#a-zA-Z0-9]+

bind editor <space> noop
bind index G last-entry
bind index gg first-entry
bind pager g noop
bind pager gg top
bind pager G bottom
bind index d half-down
bind index u half-up
bind index D delete-message
bind index U undelete-message
bind index F search 
bind index R group-reply
bind index / limit
bind index l display-message
bind pager h exit
bind pager,index i display-toggle-weed
bind pager j next-line
bind pager k previous-line
bind index h noop
bind attach l view-attach
bind attach h noop
bind attach h exit
bind attach i display-toggle-weed
bind index za collapse-thread

auto_view application/pdf

unmy_hdr *
my_hdr X-PGP-Key: https://keybase.io/cbows63/pgp_keys.asc
my_hdr X-URL: https://christianbosdorf.xyz

